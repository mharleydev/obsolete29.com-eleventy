---
pagination:
  data: collections.posts
  size: 1
  alias: article
permalink: /posts/{{ article.fileSlug }}/og-image/
eleventyExcludeFromCollections: true
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex,nofollow">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap" rel="stylesheet"> 
    <title>Dynamic social sharing image for "{{ article.data.title }}"</title>
    <style>
        *,
        *::before,
        *::after {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            text-align: center;
            background-color: #f1f5f7;
        }

        img {
            max-width: 100%;
            display: block;
        }

        h1,
        p,
        figure {
            margin: 0;
        }
        .page-stripe {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 8px;
            background-image: linear-gradient(to right,#f1f5f7,#d80b77);
        }

        .container {
            display: flex;
            align-content: center;
            align-items: center;
            margin-top: 9%;
        }

        .profile-image {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            padding-left: 10px;
        }

        .og-image {
            margin: 0 auto;
        }
        p {
            margin-top: 2rem;
            font-weight: 500;
            letter-spacing: .125em;
            text-transform: uppercase;
        }

        .highlight {
            color: #d80b77;
            font-weight: bold;
        }

        @media (max-width: 512px) {
            .container {
                padding-left: 2em;
                padding-right: 2em;
            }
            .profile-image {
                width: 160px;
                height: 160px;
            }
            h1 {
                font-size: 1.6em;
            }

            .page-stripe {
                height: 12px;
            }
        }
    </style>
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
</head>
<body>
    <div class="container">
        <img class="profile-image" src="/assets/img/profile-photo.jpg" alt="">
        <figure class="og-image">
            <h1>{{ article.data.title }}</h1>
            <p>A post on obsolete<span class="highlight">29</span>.com</p>
        </figure>
    </div>
    <div class="page-stripe"></div>
</body>
</html>